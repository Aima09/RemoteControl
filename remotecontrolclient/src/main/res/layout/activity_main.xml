<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/remote_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/remote_touch_bg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="5"
                >
            </ImageView>
            <!-- android:background="@drawable/remote_touch_bg1" -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/remote_left"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_remote_left"
                    android:onClick="click" />

                <Button
                    android:id="@+id/remote_right"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_remote_right"
                    android:onClick="click" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.13"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="NestedWeights" >

                <Button
                    android:id="@+id/remote_back"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_remote_back"
                    android:gravity="center"
                    android:onClick="click"
                    tools:ignore="NestedWeights" />

                <Button
                    android:id="@+id/remote_home"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_remote_home"
                    android:onClick="click" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/remote_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="97dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_remote_ok"
                    android:onClick="click" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/remote_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_remote_forward"
                    android:onClick="click" />

                <Button
                    android:id="@+id/remote_windows"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_remote_windows"
                    android:onClick="click" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/my_spinner" />

</FrameLayout>