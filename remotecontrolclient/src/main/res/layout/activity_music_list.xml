<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/music"
        tools:context="com.yuanfang.venus.ui.media.MusicFragment" >

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout1"
            android:layout_alignParentTop="true" >
        </ListView>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/volume_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@drawable/seletc_framelayout_bk"
                android:focusable="true"
                android:src="@drawable/video_volumeminus" />

            <ImageView
                android:id="@+id/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seletc_framelayout_bk"
                android:focusable="true"
                android:src="@drawable/video_button_pre" />

            <ImageView
                android:id="@+id/start_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seletc_framelayout_bk"
                android:focusable="true"
                android:src="@drawable/video_button_pause" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seletc_framelayout_bk"
                android:focusable="true"
                android:src="@drawable/video_button_next" />

            <ImageView
                android:id="@+id/repeat_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seletc_framelayout_bk"
                android:focusable="true"
                android:src="@drawable/et_media_mode_circulate_n" />

            <!--
             <ImageView
            android:id="@+id/repeat_shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description"
            
            android:focusable="true"
        	android:background="@drawable/seletc_framelayout_bk"
            android:src="@drawable/player_mode_shuffle_n" />
            -->

            <ImageView
                android:id="@+id/volume_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@drawable/seletc_framelayout_bk"
                android:focusable="true"
                android:src="@drawable/video_volumeplus" />

            <!--
             <SeekBar
            android:id="@+id/volume_seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_weight="0.09"
            android:background="@drawable/seletc_framelayout_bk"
            android:focusable="true" />
            -->

        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/my_spinner" />

</FrameLayout>