<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yf.remotecontrolclient.activity.RemoteDevicesListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_public_back"/>

        <Switch
            android:id="@+id/switch_remote_server"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="远程服务"
            android:textSize="20sp"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/add_remote_devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_input_add"/>

    </LinearLayout>

    <ListView
        android:id="@+id/remote_devices_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>


</LinearLayout>
